<div class="row">
	
	<div class="col-sm-6 address_wrapper" data-hook="billing_fieldset_wrapper">
		
		<div class="panel panel-default no-margin-left no-margin-right" id="billing" data-hook>
		
			<%= form.fields_for :bill_address do |bill_form| %>
		
			<div class="panel-heading">
				<h3 class="panel-title"><%= Spree.t(:billing_address) %></h3>
			</div>
		
			<div class="panel-body">
			
				<%= render :partial => 'spree/address/form', :locals => { :form => bill_form, :address_type => 'billing', :address => @order.bill_address } %>
			
				<p class="field" style='clear: both'>
					<%= form.label :email %><br />
					<%= form.text_field :email, :class => "form-control" %>
				</p>
			
			</div>
			
			<% end %>
			
		</div>
	
	</div>
	
	<div class="col-sm-6 address_wrapper" data-hook="shipping_fieldset_wrapper">
		
		<div class="panel panel-default no-margin-left no-margin-right" id="shipping" data-hook>
		
			<%= form.fields_for :ship_address do |ship_form| %>
				
			<div class="panel-heading">
				<h3 class="panel-title"><%= Spree.t(:shipping_address) %></h3>
			</div>
			
			<div class="panel-body">
				
				<%= render :partial => 'spree/address/form', :locals => { :form => ship_form, :address_type => 'shipping', :address => @order.ship_address } %>
				
				<span class="field checkbox" data-hook="use_billing">
				<%= label_tag :order_use_billing, :id => 'use_billing' do %>
					<%= check_box_tag 'order[use_billing]', '1', @order.shipping_eq_billing_address? %>
					<%= Spree.t(:use_billing_address) %>
				<% end %>
				</span>
				
			</div>	
			<% end %>
			
		</div>
		
	</div>
	
</div>