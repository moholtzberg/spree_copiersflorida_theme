<% @body_id = 'cart' %>
<div data-hook="cart_container">
	
	<ol class="breadcrumb">
		<li><a href="/">Home</a></li>
		<li class="active">Shopping Cart</li>
	</ol>
	
	<% if @order.line_items.empty? %>
	
	<div data-hook="empty_cart">
		<p><%= Spree.t(:your_cart_is_empty) %></p>
		<p><%= link_to Spree.t(:continue_shopping), products_path, :class => 'button continue' %></p>
	</div>
	
	<% else %>
	
	<div data-hook="outside_cart_form">
		
		<%= form_for @order, :url => update_cart_path, :html => {:id => 'update-cart'} do |order_form| %>
		
		<!-- <div data-hook="inside_cart_form"> -->
			
			<div data-hook="cart_items">
				<%= render :partial => 'form', :locals => { :order_form => order_form } %>
			</div>

			<div class="links" data-hook="cart_buttons">
				
				<div class="col-md-6 pull-right text-right">
					
					<div class="col-md-6 pull-right">
					<%= button_tag :class => 'btn btn-primary', :id => 'update-button' do %>
						<%= Spree.t(:update) %>
					<% end %>
			
					<%= button_tag :class => 'checkout btn btn-primary', :id => 'checkout-link', :name => 'checkout' do %>
						<%= Spree.t(:checkout) %>
					<% end %>
					</div>
					
					<div class="col-md-6 pull-right">
						<%= order_form.text_field :coupon_code, :size => 3, :class => "form-control", :placeholder => Spree.t(:coupon_code) %>
					</div>
					

				</div>
		
			</div>
		<!-- </div> -->
		<% end %>
		
		<div id="empty-cart" data-hook class="col-md-6">
			<%= form_tag empty_cart_path, :method => :put do %>
			<p id="clear_cart_link" data-hook>
			<%= submit_tag Spree.t(:empty_cart), :class => 'btn btn-default' %>
			<%= Spree.t(:or) %>
			<%= link_to Spree.t(:continue_shopping), products_path, :class => 'continue button gray' %>
			</p>
			<% end %>
		</div>
	
	</div>
	
	
	
	<% end %>
	
</div>