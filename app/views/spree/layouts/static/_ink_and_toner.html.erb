<div id="breadcrumbs" class="hidden-xs col-sm-12 col-md-12 no-padding-left no-padding-right">
	<div class="breadcrumb">
		<li itemscope="itemscope" itemtype="http://data-vocabulary.org/Breadcrumb">
			<a itemprop="url" href="/"><span itemprop="title">Home</span></a>
		</li>
		<li itemscope="itemscope" itemtype="http://data-vocabulary.org/Breadcrumb">
			<a itemprop="url" href="<%= @page.slug %>"><span itemprop="title"><%= @page.title %></span></a>
		</li>
	</div>
</div>

<div class="outer">
	
	<div class="col-md-12 no-padding-left no-padding-right">

		<div id="accordion" role="tablist" aria-multiselectable="true">

			<% Spree::Taxon.where(:name => "Makes").first.children.each do |make| %>

			<div class="panel panel-default">

				<div class="panel-heading" role="tab" id="heading_<%= make.id %>">

					<h4 class="panel-title">

						<a role="button" data-toggle="collapse" data-parent="#accordion" href="#collapse_<%= make.id %>" aria-expanded="true" aria-controls="collapse_<%= make.id %>"><%= make.name %></a>

					</h4>

				</div>

				<div id="collapse_<%= make.id %>" class="panel-collapse collapse" role="tabpanel" aria-labelledby="heading_<%= make.id %>">

					<div class="panel-body">

						<% make.children.each_with_index do |series, index| %>
						
						<div class="col-md-12 no-padding-left no-padding-right">
							
						
						<h4><%= series.name %></h4>

						<ul class="list-inline">
							<% series.children.each do |model| %>

							<li class="col-md-2"><%= link_to "#{model.name}", seo_url(model) %></li>

							<% end %>

						</ul>

							<% if (index - make.children.count) != -1 %>
							<hr/>
							<% end %>
							
						</div>
							
						<% end %>

					</div>

				</div>

			</div>

			<% end %>

		</div>

	</div>
	
</div>